---
const { image, category, title, price } = Astro.props;
---

<div class="flex flex-col w-[230px]">
  <div class="h-[200px] rounded-full overflow-visible relative">
    <img src={image} alt="product image" class="w-full h-full object-cover" />
         <button class="z-10 absolute bottom-[-10px] left-1/2 -translate-x-1/2 bg-white border border-pink-900 w-44 h-10 rounded-3xl text-sm hover:bg-gray-100 transition flex items-center justify-center gap-2">
       <img src="/icon-add-to-cart.svg" alt="Add to Cart Icon" class="w-4 h-4" />
       Add to Cart
     </button>
    </div>
  <div class="mt-4">
    <p class="text-sm text-gray-500">{category}</p>
    <h2 class="font-semibold text-base">{title}</h2>
    <p class="text-[#b62c0f] font-semibold mt-1">{price}</p>
  </div>
</div>
